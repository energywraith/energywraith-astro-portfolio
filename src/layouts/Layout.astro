---
import Header from "../components/Header.astro";
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/utils/types/HeadTags";

import "@/styles/tailwind.css";
import "@/styles/post.css";

export type Props = HeadTags;

const headTags = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags {...headTags} />
  <body
    class="mx-auto flex min-h-screen max-w-xl flex-col gap-y-6 bg-neutral-800 px-6 py-6 text-sm text-neutral-100"
  >
    <Header />
    <slot />
  </body>
</html>
