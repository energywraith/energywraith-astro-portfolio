---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";
import type { CollectionEntry } from "astro:content";

import Layout from "@/layouts/Layout.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import Link from "@/components/shared/Link.astro";
import convertAsteriskToStrongTag from "@/utils/convertAsteriskToStrongTag";
import presentation from "@/data/presentation";
import Socials from "@/components/Socials.astro";
import BannerHeader from "@/components/BannerHeader.astro";

const posts = (await getCollection("posts")).reverse();

const works = (await getCollection("works")).filter(
  (work) => work.data.featured
);

const workPosts = works.filter((work) => work.data.showAsPost);
const allPosts = [...posts, ...workPosts];
---

<Layout>
  <main class="flex flex-col gap-12 py-6">
    <article
      class="flex flex-col items-start gap-6 md:flex-row md:items-center"
    >
      <div class="flex w-full flex-1 flex-col gap-6">
        <BannerHeader />

        <h2
          class="w-auto text-xl leading-6 md:max-w-xl"
          set:html={convertAsteriskToStrongTag(presentation.description)}
        />

        <Socials />
      </div>
      <Icon name="smile" class="h-auto w-1/5 rotate-[30deg]" />
    </article>

    <article class="flex flex-col gap-6">
      <header class="flex w-full flex-row justify-between gap-2">
        <h3 class="font-pattaya text-4xl">Works</h3>
        <Link
          href="/works"
          target="_self"
          displayAsButton
          buttonVariant="accent"
        >
          See all of <span class="underline decoration-2 underline-offset-4"
            >my works</span
          >!
        </Link>
      </header>
      <section class="flex flex-wrap gap-x-4 gap-y-8">
        {
          works.length !== 0 &&
            works.map(
              (project) => project.data.featured && <ProjectCard {...project} />
            )
        }
      </section>
    </article>

    <article class="flex flex-col gap-6">
      <header class="flex w-full flex-row justify-between gap-2">
        <h3 class="font-pattaya text-4xl">Posts</h3>
        <Link
          href="/posts"
          target="_self"
          displayAsButton
          buttonVariant="accent"
        >
          See all of <span class="underline decoration-2 underline-offset-4"
            >my posts</span
          >!
        </Link>
      </header>

      <section>
        <ul class="flex flex-col gap-4">
          {
            allPosts.length !== 0 &&
              allPosts.map((post, index) => (
                <li>
                  <Link
                    href={post.data.link || `/posts/${post.slug}`}
                    target="_self"
                    class="flex items-center gap-x-2 font-semibold"
                  >
                    <span class="font-bold text-pink-600">
                      #{allPosts.length - index}
                    </span>
                    <span class="underline decoration-2 underline-offset-4">
                      {post.data.headline || post.data.title}
                    </span>
                    {post.data.tags.map((tag) => (
                      <span class="text-sm font-normal">{`#${tag}`}</span>
                    ))}
                  </Link>
                </li>
              ))
          }
        </ul>
      </section>
    </article>
  </main>
</Layout>
